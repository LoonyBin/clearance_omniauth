<h1>Sign In</h1>
<% if @authentications.present? %>
  <p><strong>You can sign in to this account using:</strong></p>
  <div class="authentications">
    <% @authentications.each do |authentication| %>
      <div class="authentication">
        <div class="provider"><%= authentication.provider_name %></div>
        <div class="uid"><%= authentication.uid %></div>
        <%= button_to "Remove", authentication, method: :delete, class: "remove", data: { confirm: "Are you sure you want to remove this authentication option?", turbo_confirm: "Are you sure you want to remove this authentication option?" } %>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
  <p><strong>Add another service to sign in with:</strong></p>
<% else %>
  <p><strong>Sign in through one of these services:</strong></p>
<% end %>

<%= render "auth_providers" %>
